{
  "extends": "tslint-config-airbnb",
  "rules": {
    "align": false,
    "max-line-length": [
      true,
      140
    ],
    "no-floating-promises": true,
    "no-increment-decrement": false,
    "object-shorthand-properties-first": false,
    "semicolon": [
      true,
      "never"
    ],
    "trailing-comma": false,
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case",
      "allow-leading-underscore"
    ]
  }
}
